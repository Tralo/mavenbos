<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<constant name="struts.devMode" value="true" />
	<constant name="struts.objectFactory" value="spring"></constant>
	<constant name="struts.ui.theme" value="simple"></constant>
	
	<!-- 修改 form 默认布局样式 -->

	<package name="needLogin" extends="json-default">
		<!-- 注册拦截器 -->
		<interceptors>
			<interceptor name="login" class="cn.itcast.bos.web.action.interceptor.LoginInterceptor"></interceptor>
			<!-- 定义新的拦截器栈 -->
			<interceptor-stack name="loginStack">
				<interceptor-ref name="defaultStack"></interceptor-ref>
				<interceptor-ref name="login"></interceptor-ref>
			</interceptor-stack>
		</interceptors>
		
		<!-- 设置默认拦截器栈 -->
		<default-interceptor-ref name="loginStack"></default-interceptor-ref>
		
		<global-results>
			<result name="login">/login.jsp</result>
		</global-results>
		
		<action name="index">
			<result>/index.jsp</result>
		</action>
		<!-- 需要进行权限控制的页面访问 -->
		<action name="page_*_*">
			<result type="dispatcher">/WEB-INF/pages/{1}/{2}.jsp</result>
		</action>
		<!-- 用户管理 -->
		<action name="user_*" class="userAction" method="{1}">
			<!-- 修改密码 -->
			<result name="editpasswordSUCCESS" type="json">
				<!-- 配置root参数，指定将值栈哪个数据返回 -->
				<param name="root">map</param>
			</result>
		</action>
		<!-- 收派标准 -->
		<action name="standard_*" class="standardAction" method="{1}">
			<!-- 保存标准 -->
			<result name="saveSUCCESS">/WEB-INF/pages/base/standard.jsp</result>
			<!-- 分页查询标准数据 -->
			<result name="pageQuerySUCCESS" type="json">
				<!-- 配置root参数，指定将值栈哪个数据返回 -->
				<param name="root">pageResponseBean</param>
				<!-- 配置属性includeProperties指定哪些属性返回 -->
				<param name="includeProperties">
					<!-- 正则表达式格式 -->
					total,<!-- pageResourceBean的total属性返回 -->
					rows\[\d+\]\.id,
					rows\[\d+\]\.name,
					rows\[\d+\]\.minweight,
					rows\[\d+\]\.maxweight,
					rows\[\d+\]\.updatetime,
					rows\[\d+\]\.user\.username,
					rows\[\d+\]\.user\.station
				</param>
			</result>
			<result name="delBatchSUCCESS">
				/WEB-INF/pages/base/standard.jsp
			</result>
			<result name="ajaxlistSUCCESS" type="json">
				<!-- 配置root参数，指定将值栈哪个数据返回 -->
				<param name="root">standards</param>
				<!-- 配置属性includeProperties指定哪些属性返回 -->
				<param name="includeProperties">
					<!-- 正则表达式格式 -->
					\[\d+\]\.id,
					\[\d+\]\.name
				</param>
			</result>
		</action>
	</package>
	
	<!-- 这个包不需要登陆拦截 -->
	<package name="nologin" extends="struts-default">
		<!-- 登陆功能 -->
		<action name="login" class="loginAction">
			<result name="input">/login.jsp</result>
			<result type="redirect">/index.jsp</result>
		</action>
	</package>

</struts>